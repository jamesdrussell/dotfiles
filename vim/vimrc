set number
set nowrap
set hidden
set shortmess+=I
set fillchars=eob:\ 
set ttimeout
set ttimeoutlen=1
set ttyfast
set tabstop=4

let &t_SI = "\e[6 q"
let &t_EI = "\e[2 q"

let mapleader = " "

nnoremap <leader>w :w<cr>
nnoremap <leader>q :q<cr>
nnoremap <leader>ev :e $MYVIMRC<cr>
nnoremap <leader>sv :source $MYVIMRC<cr>

inoremap jk <esc>
