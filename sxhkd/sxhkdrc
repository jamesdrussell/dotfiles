# open launcher
super + space
    dmenu_run -nb '#282A2E' -sb '#373B41' -sf '#F0C674'

# open terminal
super + t
    ghostty

# open browser
super + b
    google-chrome

# make sxhkd reload its configuration file
super + Escape
    pkill -USR1 -x sxhkd

# quit/restart bspwm
super + shift + {q,r}
    bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# toggle between the tiled and monocle layout
super + m
	bspc desktop -l next

# send to desktop
super + shift + {1-4}
    bspc node -d '{1-4}' --follow

# switch to desktop
super + {1-4}
    bspc desktop -f '{1-4}'

# switch to prev/next desktop
super + {p,n}
    bspc desktop -f {prev,next}

# send to prev/next desktop
super + shift + {p,n}
    bspc node -d {prev,next} --follow

# focus or swap the node in given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous window in the current desktop
alt + {_,shift + }Tab
	bspc node -f {next,prev}.local.!hidden.window

# focus the next window in current desktop
super + o
    bspc node -f next.local.!hidden.window

# resizing windows
alt + super + {h,j,k,l}
    {bspc node -z right -20 0; \
    bspc node -z left +20 0, \
    bspc node -z top 0 -20; \
    bspc node -z bottom 0 +20, \
    bspc node -z top 0 +20; \
    bspc node -z bottom 0 -20, \
    bspc node -z right +20 0; \
    bspc node -z left -20 0}

# mute volume
F9
    pactl set-sink-mute @DEFAULT_SINK@ toggle

# previous track
F10
    playerctl previous

# play/pause
F11
    playerctl play-pause

# next track
F12
    playerctl next
