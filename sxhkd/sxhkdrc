# open a terminal
alt + t
    alacritty

# open a browser
alt + b
    google-chrome

# make sxhkd reload its configuration file
alt + Escape
    pkill -USR1 -x sxhkd

# for dmenu
alt + p
    dmenu_run

# quit/restart bspwm
shift + alt + {q,r}
    bspc {quit,wm -r}

# send to desktop
alt + shift + {1-9}
    bspc node -d '{1-9}' --follow

# switch to desktop
alt + {1-9}
    bspc desktop -f '{1-9}'

# focus or swap the node in given direction
alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}
