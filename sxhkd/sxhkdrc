# to spawn the terminal
alt + Return
    alacritty

# make sxhkd reload its configuration file
alt + Escape
    pkill -USR1 -x sxhkd

# for dmenu
alt + p
    dmenu_run

# quit/restart bspwm
shift + alt + {q,r}
    bspc {quit,wm -r}

# send to desktop
alt + shift + {1-9}
    bspc node -d '{1-9}' --follow

#switch to desktop
alt + {1-9}
    bspc desktop -f '{1-9}'
